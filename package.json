{
  "name": "@bem/deps",
  "version": "0.1.1",
  "description": "Manage BEM dependencies",
  "license": "MPL-2.0",
  "author": "Andrew Abramov <mail@blond.im>",
  "keywords": [
    "bem",
    "deps",
    "dependencies",
    "deps.js",
    "read",
    "parse",
    "resolve"
  ],
  "repository": "bem-sdk/bem-deps",
  "engines": {
    "node": ">= 4"
  },
  "main": "lib/index.js",
  "files": [
    "lib/**"
  ],
  "dependencies": {
    "bem-naming": "1.0.1",
    "bem-walk": "1.0.0-1",
    "lodash": "4.12.0",
    "bem-decl": "git@github.com:bem-sdk/bem-decl.git#issue3"
  },
  "devDependencies": {
    "ava": "^0.15.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "jscs": "^3.0.3",
    "jshint": "^2.9.2",
    "nyc": "^6.4.4",
    "stream-to-array": "^2.3.0",
    "through2": "^2.0.1"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "nyc ava",
    "lint": "jshint . && jscs . -c .jscs.js",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "ava": {
    "files": [
      "spec/**/*.spec.js",
      "test/**/*.test.js"
    ],
    "source": [
      "lib/**/*.js"
    ],
    "concurrency": 25
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
